alias k="kubectl"
alias kget="kubectl get"
alias kdesc="kubectl describe"

# Get Pods
kgetp() {
  kget pod ${1:+-n $1}
}

# Get Services
# 이름을 kgets로 유지 (Service용)
kgets() {
  kget service ${1:+-n $1}
}

# Get Deployments
kgetd() {
  kget deployment ${1:+-n $1}
}

# apply Pod
kply() {
  if [ -z "$1" ]; then
    echo "사용법: kply <파일명> [네임스페이스]"
    echo "예시: kply my-pod.yaml kube-system"
    return 1
  fi

  local ns=${2:-default}

  # 3. 명령어 실행
  kubectl apply -f "$1" --namespace "$ns"
}
