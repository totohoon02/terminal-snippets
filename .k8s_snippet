alias k="kubectl"
alias kdesc="kubectl describe"

# Get Pod
kget() {
  if [ -z "$1" ]; then
    kubectl get pod
  else
    kubectl get pod --namespace "$1"
  fi
}

# apply Pod
kply() {
  if [ -z "$1" ]; then
    echo "사용법: kply <파일명> [네임스페이스]"
    echo "예시: kply my-pod.yaml kube-system"
    return 1
  fi

  local ns=${2:-default}

  # 3. 명령어 실행
  kubectl apply -f "$1" --namespace "$ns"
}
