to_yml() {
    local dir="./src/main/resources"
    local input_file="$dir/application.properties"
    local tmp_file="$dir/.tmp_application.yml"

    if [ ! -f "$input_file" ]; then
        echo "âŒ íŒŒì¼ì„ ì°¾ì„ ìˆ˜ ì—†ìŠµë‹ˆë‹¤: $input_file"
        return 1
    fi

    echo "ğŸ”„ properties â†’ YAML ë³€í™˜ ì¤‘..."

    awk -F'=' '
    /^[[:space:]]*#/ { next }
    /^[[:space:]]*$/ { next }

    {
        key=$1
        value=$2
        gsub(/^[ \t]+|[ \t]+$/, "", key)
        gsub(/^[ \t]+|[ \t]+$/, "", value)
        n = split(key, parts, ".")
        indent=""

        for (i=1; i<n; i++) {
            printf "%s%s:\n", indent, parts[i]
            indent = indent "  "
        }

        # ë¦¬ìŠ¤íŠ¸ ì¸ë±ìŠ¤ ì²˜ë¦¬ (ex: key[0]=)
        match(parts[n], /(.*)\[([0-9]+)\]/, arr)
        if (arr[1] != "") {
            printf "%s%s:\n", indent, arr[1]
            indent = indent "  "
            printf "%s- %s\n\n", indent, value
        } else {
            printf "%s%s: %s\n\n", indent, parts[n], value
        }
    }' "$input_file" > "$tmp_file"

    mv "$tmp_file" "$dir/application.yml"
    rm -f "$input_file"

    echo "âœ… ë³€í™˜ ì™„ë£Œ: $dir/application.yml (ê¸°ì¡´ properties ì‚­ì œë¨)"
}

### =========================
