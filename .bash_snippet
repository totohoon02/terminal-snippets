pk() {
    port=$1

    if [[ -z "$port" ]]; then
        echo "Usage: $0 <port>"
        exit 1
    fi

    pid_to_kill=$(netstat -tuln 2>/dev/null | grep ":$port" | awk '{print $7}' | cut -d'/' -f1)

    if [[ -n "$pid_to_kill" ]]; then
        echo "killed process on $port"
        kill -9 "$pid_to_kill"
    else
        echo "No process found on $port"
    fi
}
